// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @map("id") // ID diisi manual via nanoid
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}



model imageSlider {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  imageId     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("image_sliders")
}
