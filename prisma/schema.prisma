// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma
model Users {
  id                String            @id @default(uuid())
  email             String            @unique
  name              String
  password          String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  RetinaHistory     RetinaHistory[]
  FormCheckHistory  FormCheckHistory[]
  
  @@map("users")
}

model FormCheckHistory {
  id                  String   @id @default(uuid())
  userId              String
  hypertension        Boolean
  heartDisease        Boolean
  bmi                 Float
  bloodGlucoseLevel   Float
  hba1cLevel          Float
  smokingHistory      String   @db.VarChar(50)
  predictionResult    String
  gender              String?  @db.VarChar(10)  // Boleh null
  age                 Int?     // Boleh null
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user                Users    @relation(fields: [userId], references: [id])
  
  @@map("form_check_history")
}

model RetinaHistory {
  id              String   @id @default(uuid())
  userId          String
  image           String
  imageId         String
  predictedClass  String
  confidenceClass Float
  savedStatus     Boolean?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            Users    @relation(fields: [userId], references: [id])
  
  @@map("retina_history")
}


model RetinaHistoryGuest {
  id              String   @id @default(uuid())
  image           String
  imageId         String
  predictedClass  String
  confidenceClass Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("retina_history_guest")
}

model imageSlider {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  imageId     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("image_sliders")
}